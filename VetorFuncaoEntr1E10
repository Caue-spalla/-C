#include <stdio.h>

int lerentr(void);

int main(void) {
    lerentr();
    
    return 0;
}

int lerentr(void){
    int num;
    printf("Digite um numero entre 0 e 10: ");
    scanf("%i", &num);
    while(num > 10 || num < 0){
        printf("O numero deve ser entre 0 e 10! \n");
        printf("Digite um numero entre 0 e 10: ");
        scanf("%i", &num);
    }
    printf("Prontinho");
    return 1;
}
